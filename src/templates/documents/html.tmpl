---
styles:
- /styles/main-inline.css
scripts:
- /scripts/controllers/async-iframe-controller.js
- /scripts/controllers/async-styles-controller.js
- /scripts/controllers/async-font-controller.js
- /scripts/controllers/service-worker-controller.js
---
<!doctype html>
<html>
<head>
	<title>{{data.title}}</title>

	<meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{data.theme_color}}">

	<link rel="manifest" href="/manifest.json">

  {{#styles.inline}}
    <style>{{{.}}}</style>
  {{/styles.inline}}
</head>
<body>
  {{{content}}}

	<script>
		window.GauntFace = window.GauntFace || {};
		window.GauntFace._asyncStyles = [
      {{#styles.remote}}
        '{{{.}}}',
      {{/styles.remote}}
    ];
	</script>

  {{#scripts.async}}
    <script src="{{.}}" async defer></script>
  {{/scripts.async}}

  {{#scripts.sync}}
    <script src="{{.}}"></script>
  {{/scripts.sync}}
</body>
</html>
