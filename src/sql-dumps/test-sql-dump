DROP TABLE IF EXISTS `posts_table`;
CREATE TABLE `posts_table` (`id` int(11) unsigned NOT NULL AUTO_INCREMENT,`publishDate` datetime DEFAULT NULL,`draftDate` datetime NOT NULL,`title` text,`author` varchar(100) NOT NULL DEFAULT 'Matt Gaunt',`excerptMarkdown` text,`bodyMarkdown` text,`mainImage` text,`mainImageBgColor` text,`slug` text,`status` varchar(100) NOT NULL DEFAULT 'draft',PRIMARY KEY (`id`));

