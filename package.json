{
  "name": "gauntface-site",
  "version": "3.0.0",
  "license": "Apache-2.0",
  "scripts": {
    "docker-build": "docker build -t gauntface/gf-site:base -f src/infra/docker/base .",
    "docker-run": "npm run docker-cleanup && npm run docker-build && docker run --name gauntface-local-docker -p 3000:3000 -v build:/gauntface/site -d -t gauntface/gf-site:base",
    "docker-stop": "docker stop gauntface-local-docker",
    "docker-remove": "docker rm gauntface-local-docker",
    "docker-cleanup": "npm run docker-remove  --silent",
    "lint": "eslint '.'",
    "test": "npm run lint && mocha"
  },
  "devDependencies": {
    "eslint": "^3.11.1",
    "eslint-config-google": "^0.7.1",
    "gulp": "github:gulpjs/gulp#4.0"
  }
}
